{% extends 'partials/base.html.twig' %}

{% block content %}
<div class="grid grid-centered">
    <div class="grid-cell">

        {% include 'partials/navigation.html.twig' %}

        <article class="article{% if theme_config.scrollappear %} scrollappear{% endif %}">
            <header class="article-header">
                <h1>{{ page.title }}</h1>
                <p>{{ page.header.headline }}</p>
                <div class="article-list-footer">
                    <span class="article-list-date">{{ page.date|date(date_format) }}</span>
                    <span class="article-list-divider">-</span>
                    <span class="article-list-minutes">{{ page.content|readingtime }}</span>

                    {% if page.taxonomy.category %}
                    <span class="article-list-divider">-</span>
                    <div class="article-list-tags">
                        {% for category in page.taxonomy.category %}
                        <a href="{{ base_url }}/category:{{ category }}">{{ category }}</a>
                        {% endfor %}
                    </div>
                    {% endif %}

                    {% if page.header.header_image %}
                    <p><img src="{{ page.media.images[page.header.header_image].cache.url() }}" alt="{{ page.media.images[page.header.header_image].metadata.alt_text }}"></p>
                    {% endif %}
                </div>
            </header>

            <div class="article-content">
                {{ content }}
            </div>

            {% include 'partials/share.html.twig' %}
            {% if config.plugins.jscomments.enabled %}{{ jscomments()|raw }}{% endif %}

        </article>

        {% include 'partials/footer.html.twig' %}

    </div>
</div>
{% endblock %}
